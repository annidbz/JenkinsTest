CODE_CHANGES = true

pipeline {
    agent any
    tools {
        maven 'maven_3_6_3' 
    }

    stages {
        stage ('Compile Stage') {
        
        when{
        	expression{
        	 CODE_CHANGES == true
        	}
        }

            steps {
            echo "Compile Stage"
                bat "mvn clean compile" 
            }
        }

        stage ('Testing Stage') {

            steps {
                 bat "mvn test" 
            }
        }


        stage ('Deployment Stage') {
            steps {
                 bat "mvn clean package" 
                
            }
        }
        
  
    }
    
    
    
    
    post{
       		always{
       			echo "Build complete"
       		} 
        }
        
        
        
}