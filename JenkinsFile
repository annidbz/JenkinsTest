pipeline {
    agent any
    tools {
        maven 'maven_3_6_3' 
    }

    stages {
        stage ('Compile Stage') {

            steps {
                bat "mvn clean compile" 
            }
        }

        stage ('Testing Stage') {

            steps {
                 bat "mvn test" 
            }
        }


        stage ('Deployment Stage') {
            steps {
                 bat "mvn clean package" 
            }
        }
        
        
        
        post{
       		always{
       			sh "java -jar TestJenkins-0.0.1-SNAPSHOT.jar"
       		} 
        }
        
        
        
        
    }
}